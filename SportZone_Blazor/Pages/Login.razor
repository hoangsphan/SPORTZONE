@page "/login"

<PageTitle>Sign In</PageTitle>

<section class="auth-shell login">
    <h1>Sign in to SportZone</h1>
    <p class="lead">Credential and OAuth flows are being migrated from the React portal. Use the API token for now.</p>

    <form class="login__form">
        <label>
            <span>Email</span>
            <input type="email" placeholder="name@example.com" />
        </label>
        <label>
            <span>Password</span>
            <input type="password" placeholder="********" />
        </label>
        <button type="button" disabled>Coming soon</button>
    </form>
</section>
