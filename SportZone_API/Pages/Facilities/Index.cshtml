@page
@model SportZone_API.Pages.Facilities.IndexModel
@{
    ViewData["Title"] = "Danh sách cơ sở";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
    <div>
        <h1 class="h3 mb-1">Khám phá cơ sở thể thao</h1>
        <p class="text-muted mb-0">Lọc và tìm kiếm để lựa chọn sân phù hợp nhất với nhu cầu của bạn.</p>
    </div>
    <a class="btn btn-outline-secondary" asp-page="/Index"><i class="fa-solid fa-arrow-left me-2"></i>Quay lại trang chủ</a>
</div>

<section class="search-panel mb-4">
    <form method="get" class="row g-3 align-items-end">
        <div class="col-12 col-md-6 col-lg-4">
            <label class="form-label" asp-for="Search">Từ khóa</label>
            <input class="form-control" asp-for="Search" placeholder="Nhập tên cơ sở hoặc địa chỉ..." />
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <label class="form-label" asp-for="Category">Hạng mục</label>
            <select class="form-select" asp-for="Category">
                <option value="">Tất cả hạng mục</option>
                @foreach (var category in Model.CategoryOptions)
                {
                    <option value="@category.CategoryFieldName">@category.CategoryFieldName</option>
                }
            </select>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <label class="form-label" asp-for="Address">Khu vực</label>
            <select class="form-select" asp-for="Address">
                <option value="">Tất cả khu vực</option>
                @foreach (var address in Model.AddressOptions)
                {
                    <option value="@address">@address</option>
                }
            </select>
        </div>
        <div class="col-12 col-md-6 col-lg-2">
            <label class="form-label" asp-for="SortBy">Sắp xếp</label>
            <select class="form-select" asp-for="SortBy">
                @foreach (var option in Model.SortOptions)
                {
                    <option value="@option.Value">@option.Label</option>
                }
            </select>
        </div>
        <div class="col-12 col-md-6 col-lg-2">
            <label class="form-label" asp-for="PageSize">Kích thước trang</label>
            <select class="form-select" asp-for="PageSize">
                @foreach (var size in Model.PageSizeOptions)
                {
                    <option value="@size">@size cơ sở/trang</option>
                }
            </select>
        </div>
        <div class="col-12 col-md-6 col-lg-2">
            <div class="form-check form-switch mt-4 mt-md-0">
                <input class="form-check-input" asp-for="OpenNow" />
                <label class="form-check-label" for="OpenNow">Chỉ hiển thị cơ sở đang mở</label>
            </div>
        </div>
        <div class="col-12 col-md-3 col-lg-1">
            <button type="submit" class="btn btn-primary w-100"><i class="fa-solid fa-search me-2"></i>Tìm kiếm</button>
        </div>
        <div class="col-12 col-md-3 col-lg-1">
            <a class="btn btn-outline-secondary w-100" asp-page="/Facilities/Index"><i class="fa-solid fa-rotate me-2"></i>Đặt lại</a>
        </div>
    </form>
</section>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
}
else if (Model.ResultCount == 0)
{
    <div class="empty-state text-center">
        <i class="fa-solid fa-circle-info fa-2x text-secondary mb-3"></i>
        <p class="mb-0">Không tìm thấy cơ sở nào phù hợp với tiêu chí tìm kiếm.</p>
    </div>
}
else
{
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-2 mb-3">
        @{ var filterDescriptions = Model.AppliedFilters; }
        <p class="mb-0 text-muted">
            Đang hiển thị
            @if (Model.ResultCount > 0)
            {
                <text><strong>@Model.FirstItemNumber</strong>-<strong>@Model.LastItemNumber</strong> trong tổng số <strong>@Model.ResultCount</strong> cơ sở</text>
            }
            else
            {
                <text><strong>0</strong> cơ sở</text>
            }
            @if (filterDescriptions.Count > 0)
            {
                <text>phù hợp với @string.Join(", ", filterDescriptions)</text>
            }
            else
            {
                <text>mới nhất trên hệ thống</text>
            }
        </p>
        <div class="d-flex flex-column align-items-lg-end gap-1 text-muted small">
            <span>Trạng thái cập nhật lúc @Model.CurrentTimeDisplay</span>
            <span>Sắp xếp: <strong class="text-body">@Model.ActiveSortOption.Label</strong></span>
            @if (Model.ResultCount > 0)
            {
                <span>Trang <strong class="text-body">@Model.CurrentPage</strong> / @Model.TotalPages</span>
            }
        </div>
    </div>

    @if (Model.AppliedFilters.Count > 0)
    {
        <div class="d-flex flex-wrap gap-2 mb-3">
            @foreach (var filter in Model.AppliedFilters)
            {
                <span class="badge badge-soft-primary">@filter</span>
            }
        </div>
    }

    @{ ViewData["ScheduleEvaluationTime"] = Model.EvaluationTimestamp; }
    <div class="row g-4">
        @foreach (var facility in Model.Facilities)
        {
            <div class="col-12 col-md-6 col-xl-4">
                <partial name="_FacilityCard" model="facility" />
            </div>
        }
    </div>

    @if (Model.ShowPagination)
    {
        <nav class="mt-4" aria-label="Phân trang cơ sở">
            <ul class="pagination justify-content-center flex-wrap gap-2">
                <li class="page-item @(Model.HasPreviousPage ? string.Empty : "disabled")">
                    @if (Model.HasPreviousPage)
                    {
                        <a class="page-link" asp-page="./Index" asp-all-route-data="Model.BuildRouteValues(1)" aria-label="Trang đầu">
                            <span aria-hidden="true">&laquo;&laquo;</span>
                        </a>
                    }
                    else
                    {
                        <span class="page-link" aria-hidden="true">&laquo;&laquo;</span>
                    }
                </li>
                <li class="page-item @(Model.HasPreviousPage ? string.Empty : "disabled")">
                    @if (Model.HasPreviousPage)
                    {
                        <a class="page-link" asp-page="./Index" asp-all-route-data="Model.BuildRouteValues(Model.CurrentPage - 1)" aria-label="Trang trước">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    }
                    else
                    {
                        <span class="page-link" aria-hidden="true">&laquo;</span>
                    }
                </li>

                @if (Model.PaginationPages.Count > 0 && Model.PaginationPages[0] > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="./Index" asp-all-route-data="Model.BuildRouteValues(1)">1</a>
                    </li>
                    @if (Model.PaginationPages[0] > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">…</span></li>
                    }
                }

                @foreach (var pageNumber in Model.PaginationPages)
                {
                    var activeClass = pageNumber == Model.CurrentPage ? "active" : string.Empty;
                    <li class="page-item @activeClass">
                        @if (pageNumber == Model.CurrentPage)
                        {
                            <span class="page-link">@pageNumber</span>
                        }
                        else
                        {
                            <a class="page-link" asp-page="./Index" asp-all-route-data="Model.BuildRouteValues(pageNumber)">@pageNumber</a>
                        }
                    </li>
                }

                @if (Model.PaginationPages.Count > 0 && Model.PaginationPages[^1] < Model.TotalPages)
                {
                    if (Model.PaginationPages[^1] < Model.TotalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">…</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" asp-page="./Index" asp-all-route-data="Model.BuildRouteValues(Model.TotalPages)">@Model.TotalPages</a>
                    </li>
                }

                <li class="page-item @(Model.HasNextPage ? string.Empty : "disabled")">
                    @if (Model.HasNextPage)
                    {
                        <a class="page-link" asp-page="./Index" asp-all-route-data="Model.BuildRouteValues(Model.CurrentPage + 1)" aria-label="Trang tiếp">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    }
                    else
                    {
                        <span class="page-link" aria-hidden="true">&raquo;</span>
                    }
                </li>
                <li class="page-item @(Model.HasNextPage ? string.Empty : "disabled")">
                    @if (Model.HasNextPage)
                    {
                        <a class="page-link" asp-page="./Index" asp-all-route-data="Model.BuildRouteValues(Model.TotalPages)" aria-label="Trang cuối">
                            <span aria-hidden="true">&raquo;&raquo;</span>
                        </a>
                    }
                    else
                    {
                        <span class="page-link" aria-hidden="true">&raquo;&raquo;</span>
                    }
                </li>
            </ul>
        </nav>
    }
}
