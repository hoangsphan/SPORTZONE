@page "/account/login"
@model SportZone_API.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="account-page">
    <div class="account-card">
        <div class="account-card__header">
            <h1 class="h3 mb-1">Đăng nhập hệ thống</h1>
            <p class="text-muted mb-0">Nhập thông tin tài khoản để truy cập các chức năng quản lý và đặt sân.</p>
        </div>

        <form method="post" class="account-card__form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="d-flex flex-column flex-sm-row gap-2 align-items-sm-center justify-content-between">
                <a class="link-secondary" asp-page="/Account/ForgotPassword">Quên mật khẩu?</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-right-to-bracket me-2"></i>Đăng nhập
                </button>
            </div>
        </form>

        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
        {
            <div class="alert alert-danger account-card__alert" role="alert">
                <i class="fa-solid fa-circle-exclamation me-2"></i>@Model.ErrorMessage
            </div>
        }
        else if (Model.Result is not null)
        {
            <div class="alert alert-success account-card__alert" role="alert">
                <i class="fa-solid fa-circle-check me-2"></i>Đăng nhập thành công! Bạn có thể sử dụng token sau để gọi API.
            </div>

            <section class="account-card__result mt-3">
                <h2 class="h6 mb-3">Thông tin người dùng</h2>
                <dl class="row small">
                    <dt class="col-5 text-muted">Email</dt>
                    <dd class="col-7">@Model.Result.User.UEmail</dd>

                    <dt class="col-5 text-muted">Tên hiển thị</dt>
                    <dd class="col-7">@Model.Result.User.Name ?? "Chưa cập nhật"</dd>

                    <dt class="col-5 text-muted">Vai trò</dt>
                    <dd class="col-7">@Model.Result.User.RoleName ?? "Không xác định"</dd>

                    <dt class="col-5 text-muted">Trạng thái</dt>
                    <dd class="col-7">@Model.Result.User.UStatus ?? "Không xác định"</dd>
                </dl>

                @if (Model.Result.FacilityInfo?.Facilities?.Any() == true)
                {
                    <div class="mt-3">
                        <h3 class="h6 text-uppercase text-muted mb-2">Cơ sở phụ trách</h3>
                        <ul class="list-unstyled small mb-0">
                            @foreach (var facility in Model.Result.FacilityInfo.Facilities!)
                            {
                                <li class="mb-1">
                                    <strong>@facility.Name</strong>
                                    @if (!string.IsNullOrWhiteSpace(facility.Address))
                                    {
                                        <span class="text-muted">&mdash; @facility.Address</span>
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                }

                <div class="mt-4">
                    <h3 class="h6 text-uppercase text-muted mb-2">JSON Web Token</h3>
                    <pre class="account-card__token" tabindex="0">@Model.Result.Token</pre>
                </div>
            </section>
        }

        <div class="account-card__footer mt-4">
            <span class="text-muted">Chưa có tài khoản?</span>
            <a class="btn btn-outline-primary" asp-page="/Account/Register">
                <i class="fa-solid fa-user-plus me-2"></i>Đăng ký ngay
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
