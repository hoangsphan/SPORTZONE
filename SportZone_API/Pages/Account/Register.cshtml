@page "/account/register"
@model SportZone_API.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="account-page">
    <div class="account-card">
        <div class="account-card__header">
            <h1 class="h3 mb-1">Tạo tài khoản mới</h1>
            <p class="text-muted mb-0">Đăng ký để quản lý cơ sở, đặt sân và nhận thông báo từ SportZone.</p>
        </div>

        <form method="post" enctype="multipart/form-data" class="account-card__form" data-account-register="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Input.RoleName" class="form-label">Vai trò</label>
                <select asp-for="Input.RoleName" class="form-select" data-role-toggle="true">
                    @foreach (var option in Model.RoleOptions)
                    {
                        <option value="@option.Value">@option.Text</option>
                    }
                </select>
                <span asp-validation-for="Input.RoleName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Name" class="form-label">Họ và tên</label>
                <input asp-for="Input.Name" class="form-control" autocomplete="name" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Phone" class="form-label">Số điện thoại</label>
                <input asp-for="Input.Phone" class="form-control" autocomplete="tel" />
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-section is-visible" data-role-section="Staff">
                <h2 class="form-section__title">Thông tin nhân viên</h2>
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <label asp-for="Input.FacId" class="form-label">Mã cơ sở</label>
                        <input asp-for="Input.FacId" class="form-control" min="1" />
                        <span asp-validation-for="Input.FacId" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6">
                        <label asp-for="Input.Dob" class="form-label">Ngày sinh</label>
                        <input asp-for="Input.Dob" class="form-control" type="date" />
                        <span asp-validation-for="Input.Dob" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6">
                        <label asp-for="Input.StartTime" class="form-label">Ngày bắt đầu làm việc</label>
                        <input asp-for="Input.StartTime" class="form-control" type="date" />
                        <span asp-validation-for="Input.StartTime" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6">
                        <label asp-for="Input.EndTime" class="form-label">Ngày kết thúc (nếu có)</label>
                        <input asp-for="Input.EndTime" class="form-control" type="date" />
                        <span asp-validation-for="Input.EndTime" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Input.ImageFile" class="form-label">Ảnh nhân viên (tùy chọn)</label>
                        <input asp-for="Input.ImageFile" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-column flex-sm-row gap-2 justify-content-end mt-4">
                <a class="btn btn-outline-secondary" asp-page="/Account/Login">
                    <i class="fa-solid fa-arrow-left me-2"></i>Quay lại đăng nhập
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-user-plus me-2"></i>Đăng ký
                </button>
            </div>
        </form>

        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
        {
            <div class="alert alert-danger account-card__alert" role="alert">
                <i class="fa-solid fa-circle-exclamation me-2"></i>@Model.ErrorMessage
            </div>
        }
        else if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
        {
            <div class="alert alert-success account-card__alert" role="alert">
                <i class="fa-solid fa-circle-check me-2"></i>@Model.SuccessMessage
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
